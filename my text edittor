# Import necessary tkinter
from tkinter import *
from tkinter.filedialog import askopenfilename, asksaveasfilename


# Setup root window
window = Tk()
window.title("Apple's Text edittor")
window.geometry("600x500")
window.rowconfigure(0, minsize=800, weight=1)
window.columnconfigure(1, minsize=800, weight=1)

# Functon to open a file
def open_file():
    """Open a file for editting."""
    filepath = askopenfilename(
        filetypes=[("Text Files", "*.txt"), ("All Files", "*.*")]
    )
    if not filepath:
        return 
    txt_edit.delete(1.0, END)
        # IF FILE IS OPENDED THEN DISPLAY THE CONTENTS OF THR FIE
    with open(filepath, "r") as  input_file:
            # read contents os the input file
            text = input_file.read()


            # Insert contentys of the file in rhe edittor box
            txt_edit.insert(END, text)
            input_file.close()
    window.title(f"Apple's Text edittor - {filepath}")


# Function to save a file
def save_file():
     # save the current file as a new file
     
    filepath = asksaveasfilename(
         defaultextension="txt",
        filetypes=[("Text Files", "*.txt"), ("All Files", "*.*")]
    )
    if not filepath:
         return
    with open(filepath, "w") as output_file:
          # Read the editted contentb and update in the output file
          text = txt_edit.get(1.0, END)
          output_file.write(text)
    window.title(f"Apple's Text edittor- {filepath}")
    
# add widgets in the app
txt_edit = Text(window)
fr_buttons = Frame(window, relief=RAISED, bd=2)
btn_open = Button(fr_buttons, text="Open", command=open_file)
btn_save = Button(fr_buttons, text="SAve as....", command=save_file)


btn_open.grid(row=0, column=0, sticky="ew", padx=5, pady=5)
btn_save.grid(row=1, column=0, sticky="ew", padx=5)


fr_buttons.grid(row=0, column=0, sticky="ns")
txt_edit.grid(row=0, column=1, sticky="nsew")

# start the GUI event loop
window.mainloop()
